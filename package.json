{
  "name": "legion-warband-buddy",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "dev": "concurrently -n convex,vite -c blue,green \"bun run dev:convex\" \"bun run dev:web\"",
